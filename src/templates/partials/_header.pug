//begin header
+b.HEADER.header(class= headerClass)
	+e.contact
		+e.contact-container.container
			+b.contact-block._header
				+e.A.link(href='tel:+79220390969')
					+i('tel')
					| +7 922 039 09 69
				+e.social-links
					+e.A.social-link(href='#!' target='_blank') Telegram
					+e.A.social-link(href='#!' target='_blank') Viber
					+e.A.social-link(href='#!' target='_blank') Whatsapp
				+e.social-icons
					+e.A.social-icon(href='#!' target='_blank')
						+i('vk')
					+e.A.social-icon(href='#!' target='_blank')
						+i('yt')
				+e.A.link(href='mailto:info@shl-testing.ru')
					+i('mail')
					| info@shl-testing.ru
				+btn('b', 'Написать нам', '_type-1', 'write-us')

	+e.line
		+e.line-container.container
			+e.A.logo(href='#!')
				+e.IMG.logo-img(src='img/other/logo.png' alt='Аспирант')
				+e.H1.logo-title Аспирант
			+e.NAV.nav
				-
					navList = [
					['О нас', 'about'],
					['Услуги и цены', 'services'],
					['Как мы работаем', 'how-to'],
					['Обучение', 'train'],
					['Отзывы', 'testimonials'],
					['Контакты', 'contact']
					]
				+e.UL.nav-list
					for navLink in navList
						li: a(href=`#${navLink[1]}`)
							span= navLink[0]
							span= navLink[0]

			+e.BUTTON.nav-btn(type='button')
				+e.SPAN.nav-btn-burger
					+e.SPAN.nav-btn-lines
//end header
